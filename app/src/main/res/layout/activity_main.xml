<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="안녕하세요 내일러님!"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="#000000"
                android:gravity="left"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="18dp"/>
            <TextView
                android:id="@+id/second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내일로 여행 계획이 없습니다."
                android:textSize="13dp"
                android:textColor="#000000"
                android:layout_below="@+id/first"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="18dp"/>
            <Button
                android:id="@+id/basic_trip_scheduling"
                android:layout_width="195dp"
                android:layout_height="wrap_content"
                android:text="나만의 내일로 계획 세우기"
                android:textSize="13dp"
                android:textColor="#ffffff"
                android:background="@drawable/trip_scheduling_button"
                android:layout_alignTop="@+id/second"
                android:layout_toRightOf="@+id/second"
                android:layout_marginLeft="30dp"/>
            <Button
                android:id="@+id/smart_trip_scheduling"
                android:layout_width="195dp"
                android:layout_height="wrap_content"
                android:text="스마트한 내일로 계획 세우기"
                android:textSize="13dp"
                android:textColor="#ffffff"
                android:background="@drawable/trip_scheduling_button"
                android:layout_below="@+id/basic_trip_scheduling"
                android:layout_toRightOf="@+id/second"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:background="@drawable/information_bar"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            <Button
                android:id="@+id/what_is_naeilo"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:textSize="13dp"
                android:text="내일로란?"
                android:background="@drawable/information_bar_button"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"/>
            <Button
                android:id="@+id/naeilo_service"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:textSize="13dp"
                android:text="내일로 혜택"
                android:background="@drawable/information_bar_button"
                android:layout_marginRight="15dp"/>
            <Button
                android:id="@+id/naeilo_tip"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="내일로팁"
                android:textSize="13dp"
                android:background="@drawable/information_bar_button"
                />
            <Button
                android:id="@+id/FAQ"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:textSize="13dp"
                android:text="FAQ"
                android:background="@drawable/information_bar_button"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="15dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/line"/>
    </LinearLayout>
    </ScrollView>

</LinearLayout>