<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="660dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/first"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="50dp"
                    android:gravity="left"
                    android:text="안녕하세요 내일러님!"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/first"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="20dp"
                    android:text="내일로 여행 계획이 없습니다."
                    android:textColor="#000000"
                    android:textSize="13dp" />

                <Button
                    android:id="@+id/basic_trip_scheduling"
                    android:layout_width="195dp"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/second"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@+id/second"
                    android:background="@drawable/trip_scheduling_button"
                    android:text="나만의 내일로 계획 세우기"
                    android:textColor="#ffffff"
                    android:textSize="13dp" />

                <Button
                    android:id="@+id/smart_trip_scheduling"
                    android:layout_width="195dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/basic_trip_scheduling"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="20dp"
                    android:layout_toRightOf="@+id/second"
                    android:background="@drawable/trip_scheduling_button"
                    android:text="스마트한 내일로 계획 세우기"
                    android:textColor="#ffffff"
                    android:textSize="13dp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/information_bar"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/what_is_naeilo"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/information_bar_button"
                    android:text="내일로란?"
                    android:textSize="13dp" />

                <Button
                    android:id="@+id/naeilo_service"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/information_bar_button"
                    android:text="내일로 혜택"
                    android:textSize="13dp" />

                <Button
                    android:id="@+id/naeilo_tip"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/information_bar_button"
                    android:text="내일로팁"
                    android:textSize="13dp" />

                <Button
                    android:id="@+id/FAQ"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/information_bar_button"
                    android:text="FAQ"
                    android:textSize="13dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/line" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="추천 여행지"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:gravity="left"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="18dp"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/main_icon_selected"
            android:layout_width="25dp"
            android:layout_height="28dp"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_home_b"/>
        <ImageButton
            android:id="@+id/grid_icon"
            android:layout_width="25dp"
            android:layout_height="28dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="118dp"
            android:background="@drawable/ic_grid"/>
        <ImageButton
            android:id="@+id/user_icon"
            android:layout_width="25dp"
            android:layout_height="28dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="118dp"
            android:background="@drawable/ic_user"/>
    </LinearLayout>
</LinearLayout>