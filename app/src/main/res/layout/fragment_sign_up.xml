<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_container">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="70dp"
            android:layout_marginRight="30dp"
            android:text="* 이름"
            android:textColor="#4E6BDE" />
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:textSize="14dp"
            android:hint="이름을 입력하세요."
            android:background="@drawable/sign_up_edittext"
            android:inputType="text"
            android:textColorHint="#ADB5BD"/>
    </LinearLayout>

    <View
        android:layout_gravity="center"
        android:layout_width="360dp"
        android:layout_height="1dp"
        android:background="@drawable/line"
        android:layout_marginTop="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="20dp"
            android:text="* 핸드폰"
            android:textColor="#4E6BDE" />
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textSize="14dp"
            android:hint="번호를 입력하세요."
            android:background="@drawable/sign_up_edittext"
            android:inputType="phone"
            android:textColorHint="#ADB5BD"/>
    </LinearLayout>

    <View
        android:layout_gravity="center"
        android:layout_width="360dp"
        android:layout_height="1dp"
        android:background="@drawable/line"
        android:layout_marginTop="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="16dp"
            android:text="* ID"
            android:textColor="#4E6BDE" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13글자 이내"
                android:textSize="10dp"
                android:textColor="#4E6BDE"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="24dp"/>
            <EditText
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:textSize="14dp"
                android:hint="아이디를 입력하세요."
                android:layout_marginLeft="24dp"
                android:background="@drawable/sign_up_edittext"
                android:inputType="text"
                android:textColorHint="#ADB5BD"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_gravity="center"
        android:layout_width="360dp"
        android:layout_height="1dp"
        android:background="@drawable/line"
        android:layout_marginTop="19dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="16dp"
            android:text="* PW"
            android:textColor="#4E6BDE" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="영문, 숫자 포함 10글자 이상"
                android:textSize="10dp"
                android:textColor="#4E6BDE"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="18dp"/>
            <EditText
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:textSize="14dp"
                android:hint="비밀번호를 입력하세요."
                android:layout_marginLeft="18dp"
                android:background="@drawable/sign_up_edittext"
                android:inputType="textPassword"
                android:textColorHint="#ADB5BD"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_gravity="center"
        android:layout_width="360dp"
        android:layout_height="1dp"
        android:background="@drawable/line"
        android:layout_marginTop="19dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <Button
            android:id="@+id/sign_up_cancel_btn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="40dp"
            android:text="취소"
            android:textColor="#4E6BDE"
            android:background="@drawable/login_white_button"/>

        <Button
            android:id="@+id/sign_up_ok_btn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="20dp"
            android:text="회원가입 완료"
            android:textColor="#FFFFFF"
            android:background="@drawable/login_button"/>
    </LinearLayout>



</LinearLayout>